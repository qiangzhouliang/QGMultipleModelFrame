<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white">
    <include
            android:id="@+id/head_layout"
            layout="@layout/head_control_panel"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_2x"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_14"
            android:text="\t\t\t\t遇到未知错误，我们对此引起的不便表示抱歉。我们希望您能描述一下引起该错误的操作步骤，并将这些描述发送给我们，以便于我们对产品做进一步的优化，更加方便您的使用。"/>
    <EditText
            android:id="@+id/error_report_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_2x"
            android:gravity="top"
            android:padding="5dp"
            android:minLines="6"
            android:inputType="textMultiLine"
            android:background="@drawable/box_border"/>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="15dp">
        <Button
                android:id="@+id/error_report_restart_btn"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                android:text="重启应用"
                android:background="@color/top_bg"
                android:textColor="@color/white"/>
        <Button
                android:id="@+id/error_report_send_btn"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="发送反馈"
                android:background="@color/top_bg"
                android:textColor="@color/white"/>
    </LinearLayout>

</LinearLayout>