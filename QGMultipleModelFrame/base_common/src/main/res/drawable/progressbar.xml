<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background" android:height="@dimen/dp_4">
        <!--形状-->
        <shape>
            <!-- 角球-->
            <corners android:radius="5dip" />
            <!--梯度-->
            <gradient
                android:angle="0"
                android:endColor="@color/grey"
                android:startColor="@color/grey" />
        </shape>
    </item>
    <item android:id="@android:id/progress" android:height="@dimen/dp_4">
        <clip>
            <shape>
                <corners android:radius="5dip" />
                <gradient
                    android:angle="0"
                    android:endColor="@color/theme_end"
                    android:startColor="@color/theme_start" />
            </shape>
        </clip>
    </item>

</layer-list>